<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView android:id="@+id/iv_sub"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/selector_countview_iv_reduce"/>

    <View android:id="@+id/dividerLeft"
          android:layout_width="0.5dp"
          android:layout_height="match_parent"/>

    <EditText android:id="@+id/et_count"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:background="@color/cl_f5f5f5"
              android:gravity="center"
              android:inputType="number"
              android:singleLine="true"
              android:minWidth="50dp"
              android:textColor="@drawable/selector_countview_et_cl"
              android:textSize="16sp"
              tools:text="0"/>

    <View android:id="@+id/dividerRight"
          android:layout_width="0.5dp"
          android:layout_height="match_parent"/>

    <ImageView android:id="@+id/iv_add"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/selector_countview_iv_add"/>
</LinearLayout>